.row(style="max-width: 100%; margin-left: 0; margin-right: 0;")
  .col-12.col-sm-12.col-md-12.col-lg-2
    app-side-panel([pathState]="pathState")
  .col-12.col-sm-12.col-md-12.col-lg-9(style="height: 100%;")
    .row
      .col-12.col-sm-12.col-md-12.col-lg-12
        app-filter-controls
      .col-12.col-sm-12.col-md-12.col-lg-12
        .table-responsive-xl.table-view
          table.table.table-dark.table-striped.table-hover(
            *ngIf="table.length && tableReady")
            tbody
              tr
                th id
                th Date
                th Product
                th Buy/Sell
                th Amount
                th Balance
                th Type
              tr(*ngFor="let transaction of table")
                td {{ transaction.id }}
                td {{ transaction.date }}
                td {{ transaction.product }}
                td {{ transaction.buysell }}
                td {{ transaction.amount | number: '.8'}}
                td {{ transaction.balance | number: '.8' }}
                td {{ transaction.type }}
          table.table.table-inverse(*ngIf="!table.length && tableReady")
            tr
              td
                p There is no data matching your criteria
          table.table.table-inverse(*ngIf="!tableReady")
            tr
              td
                p Building the table of the bot's trading history
        .col-12.col-sm-12.col-md-12.col-lg-12.col-xl-12.paginate-box
          div.page-setter-wrapper
            span Page:
            div.btn.btn-lg(
              (click)="changedPageNumber('prev')",
              [ngClass]="{'disabled': isNoPrevPage}")
              span.fa.fa-angle-left.angle-btn-left
            span {{ page }}
            div.btn.btn-lg(
              (click)="changedPageNumber('next')",
              [ngClass]="{'disabled': isNoNextPage}",
              style="padding-left: 7.5px;")
              span.fa.fa-angle-right.angle-btn-right
          div.row-setter-wrapper
            span Rows / Page:
            div.btn.btn-sm.row-setter(
              (click)="changedRowsPerPage(10)",
              [ngClass]="{'active': rowsPerPage === 10}") 10
            div.btn.btn-sm.row-setter(
              (click)="changedRowsPerPage(25)",
              [ngClass]="{'active': rowsPerPage === 25}") 25
            div.btn.btn-sm.row-setter(
              (click)="changedRowsPerPage(50)",
              [ngClass]="{'active': rowsPerPage === 50}") 50
            div.btn.btn-sm.row-setter(
              (click)="changedRowsPerPage(100)",
              [ngClass]="{'active': rowsPerPage === 100}") 100
