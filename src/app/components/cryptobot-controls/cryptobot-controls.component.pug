.row
  .col-12.col-sm-12.col-md-12.col-lg-12(style="height: 100%;")
    .row.mb-2.mx-1.py-2.px-2.custom-black.rounded.d-flex.justify-content-center
      .col-12.h2.text-center.custom-yellow Max Buy Price
      .w-25.ml-1.card(*ngFor="let maxBuyPriceControl of maxBuyPrices")
        label.text-center.card-title([for]="maxBuyPriceControl.id") {{ maxBuyPriceControl.label }}
        .card-body
          ng5-slider([id]="maxBuyPriceControl.id", [formControl]="maxBuyPriceControl.value", [options]="maxBuyPriceControl.options")
    .row.mb-2.mx-1.py-2.px-2.custom-black.rounded.d-flex.justify-content-center
      .col-12.h2.text-center.custom-yellow Max Number of Simultaneous Trades
      .w-25.ml-1.card(*ngFor="let maxNumberOfScrumsControl of maxNumberOfScrums")
        label.text-center.card-title([for]="maxNumberOfScrumsControl.id") {{ maxNumberOfScrumsControl.label }}
        .card-body
          ng5-slider([id]="maxNumberOfScrumsControl.id", [formControl]="maxNumberOfScrumsControl.value", [options]="maxNumberOfScrumsControl.options")
    //- .row.control-height
    //-   .col-12.col-sm-12.col-md-12.col-lg-12.card
    //-     div profit threshold
    .row.mb-2.mx-1.py-2.px-2.custom-black.rounded.d-flex.justify-content-center
      .col-12.h2.text-center.custom-yellow Max Money Spent Per Trade
      .w-25.ml-1.card(*ngFor="let maxBuyMoneyControl of maxBuyMoney")
        label.text-center.card-title([for]="maxBuyMoneyControl.id") {{ maxBuyMoneyControl.label }}
        .card-body
          ng5-slider([id]="maxBuyMoneyControl.id", [formControl]="maxBuyMoneyControl.value", [options]="maxBuyMoneyControl.options")
