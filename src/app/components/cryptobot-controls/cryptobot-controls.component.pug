.row
  .col-12.col-sm-12.col-md-12.col-lg-12(style="height: 100%;")
    .row.mb-2.mx-1.pb-2.px-2.border.border-dark.rounded
      .col-12.h2.text-center Max Buy Price
      .col-12.col-sm-12.col-md-3.col-lg-3.ml-1.card(*ngFor="let maxBuyPriceControl of maxBuyPrices")
        label.text-center.card-title([for]="maxBuyPriceControl.id") {{ maxBuyPriceControl.label }}
        .card-body
          ng5-slider([id]="maxBuyPriceControl.id", [formControl]="maxBuyPriceControl.value", [options]="maxBuyPriceControl.options")
